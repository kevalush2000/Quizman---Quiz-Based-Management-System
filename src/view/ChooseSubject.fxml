<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>
<?import javafx.geometry.Insets?>

<StackPane fx:id="root" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.ChooseSubjectController">
    <!-- Background -->
    <ImageView fx:id="background" preserveRatio="false"/>

    <!-- Main Content -->
    <VBox alignment="CENTER" spacing="40">
        <!-- Title -->
        <ImageView fx:id="title"
                  fitHeight="80"
                  preserveRatio="true"
                  style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 10, 0, 0, 2);"/>

        <!-- Subject Buttons -->
        <HBox alignment="CENTER" spacing="50">
            <!-- Science Button -->
            <ImageView fx:id="scienceButton"
                      fitHeight="180"
                      preserveRatio="true"
                      pickOnBounds="true"
                      style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 5);"/>

            <!-- Math Button -->
            <ImageView fx:id="mathButton"
                      fitHeight="180"
                      preserveRatio="true"
                      pickOnBounds="true"
                      style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 5);"/>

            <!-- History Button -->
            <ImageView fx:id="historyButton"
                      fitHeight="180"
                      preserveRatio="true"
                      pickOnBounds="true"
                      style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 5);"/>
        </HBox>
    </VBox>

    <!-- Back Button copied from ChooseOption layout -->
    <ImageView fx:id="backButton"
               fitHeight="60"
               preserveRatio="true"
               pickOnBounds="true"
               StackPane.alignment="TOP_LEFT"
               style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 1);">
        <StackPane.margin>
            <Insets top="20" left="20"/>
        </StackPane.margin>
    </ImageView>
</StackPane>
