<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<StackPane fx:id="root" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.StudentEnterCodeController">
    <!-- Background -->
    <ImageView fx:id="background" preserveRatio="false" />

    <VBox alignment="TOP_CENTER" spacing="40">
        <!-- Logo at the top -->
        <ImageView fx:id="logo" fitHeight="140" preserveRatio="true" />

        <!-- Code input field -->
        <TextField fx:id="codeField"
            style="-fx-font-size: 32px; -fx-background-color: #aaa; -fx-border-color: #2a5cff; -fx-border-width: 3; -fx-text-fill: white; -fx-font-family: 'Press Start 2P';"
            prefWidth="600" alignment="CENTER" />

        <!-- Enter Code Button as Image -->
        <ImageView fx:id="submitButtonImage" fitHeight="70" preserveRatio="true" style="-fx-cursor: hand;"/>
    </VBox>
</StackPane>