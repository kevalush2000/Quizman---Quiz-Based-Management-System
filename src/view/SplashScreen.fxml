<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SplashController">
    <!-- Responsive Background -->
    <ImageView fx:id="backgroundImage" preserveRatio="false" />
    <VBox alignment="CENTER" spacing="30">
        <!-- Logo with fx:id for animation -->
        <ImageView fx:id="logoImage" preserveRatio="true"/>
        <!-- "PRESS START" PNG with fx:id for animation -->
        <ImageView fx:id="pressStartImage" preserveRatio="true"/>
    </VBox>
</StackPane>